<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% if(listTitle === "Today"){ %>
      <form action="/delete" method="post">
          <% newListItems.forEach(function(listItem){ %>
          <div class="item">
            <input type="checkbox" name="checkbox" value=<%= listItem._id %> onChange="this.form.submit()">
            <p><%=  listItem.name  %></p>
          </div>
          <% }); %>
      </form>
    <% } else { %>
      <form action="/deleteCustomList" method="post">
          <% newListItems.forEach(function(listItem){ %>
          <div class="item">
            <input type="checkbox" name="checkbox" value=<%= listItem._id %> onChange="this.form.submit()">
            <p><%=  listItem.name  %></p>
          </div>
          <% }); %>
      </form>
    <% } %>

      <% if(listTitle === "Today"){ %>
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list">+</button>
        </form>
      <% } else { %>
        <form class="item" action="/customList" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list">+</button>
        </form>
      <% } %>

  </div>

<%- include("footer") -%>
